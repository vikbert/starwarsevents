{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/user/css/login.css') }}">
{% endblock %}

{% block title %}
    Register Form
{% endblock %}

{% block body %}
    <section class="login register">
        <article>
            <h1>Registration</h1>
            <hr>

            <form action="{{ path('user_register') }}" method="post">
                {{ form_errors(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first, {'label': 'Password'}) }}
                {{ form_row(form.plainPassword.second, {'label': 'Repeat Password*'}) }}
                {{ form_row(form._token) }}
                <hr>
                <input type="submit" value="Register!" class="register-submit-button btn btn-primary pull-right"/>
            </form>
        </article>
    </section>
{% endblock %}